<script>
  // ano no footer
  document.getElementById('year').innerText = new Date().getFullYear();

  // modals
  function openModal(id){
    document.getElementById(id).style.display='flex';
    document.getElementById(id).setAttribute('aria-hidden','false');
  }
  function closeModal(id){
    document.getElementById(id).style.display='none';
    document.getElementById(id).setAttribute('aria-hidden','true');
  }
  document.querySelectorAll('[data-close]').forEach(b=>b.addEventListener('click',()=>{
    b.closest('.modal').style.display='none';
  }));
  document.getElementById('openAbout').addEventListener('click',e=>{e.preventDefault();openModal('modalAbout')});
  document.getElementById('openPrivacy').addEventListener('click',e=>{e.preventDefault();openModal('modalPrivacy')});
  document.getElementById('openPrivacy2').addEventListener('click',e=>{e.preventDefault();openModal('modalPrivacy')});
  document.getElementById('openTerms').addEventListener('click',e=>{e.preventDefault();openModal('modalTerms')});

  // fechar click fora
  document.querySelectorAll('.modal').forEach(m=>{
    m.addEventListener('click', e=>{
      if(e.target===m) closeModal(m.id);
    });
  });

  // pop-up de oferta
  window.addEventListener('load', ()=>{
    setTimeout(()=>{document.getElementById('popup').style.display='block';},2000);
  });
  document.getElementById('closePopup').addEventListener('click', ()=>document.getElementById('popup').style.display='none');

  // aviso: mantém linguagem neutra (sem promessa médica)
</script>

